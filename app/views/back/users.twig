{% extends  "/layouts/Dashboard.twig" %}

{% block content %}
	<section class="users__table">
		<div class="heading">
			<h1>All active users</h1>
		</div>
		<div class="table-container">
			<table class="user-table">
				<thead class="table-head">
					<tr>
						<th class="table-header">Id</th>
						<th class="table-header">Full name</th>
						<th class="table-header">Email</th>
						<th class="table-header">Username</th>
						<th class="table-header">Date Joined</th>
						<th class="table-header">Role</th>
						<th class="table-header">Status</th>
						<th class="table-header">Manage</th>
					</tr>
				</thead>
				{% for user in usersActive %}
				<tbody class="table-body">
					<tr class="table-row">
						<td class="table-data">{{user.id}}</td>
						<td class="table-data">{{user.firstname}}</td>
						<td class="table-data">{{user.email}}</td>
						<td class="table-data">{{user.firstname}}</td>
						<td class="table-data">{{user.createdat}}</td>
						<td class="table-data">admin</td>
						<td class="table-data">{{user.is_suspended}}</td>

						<td class="manage-col">
							<span style="background-color: var(--blue);">
								<a href="/mange/update?UserId={{ user.id }}&status={{ user.is_suspended}}" class="btn-table">
									<i class="fa-solid fa-lock"></i>
								</a>
							</span>
							<span style="background-color: red;">
								<a href="/mange/delete?UserId={{ user.id }}" class="btn-table">
									<i class="fa-solid fa-trash"></i>
								</a>
							</span>
						</td>
					</tr>
				</tbody>
              {% endfor %}
			</table>
		</div>
	</section>


	<section class="users__table">
		<div class="heading">
			<h1>Suspended users</h1>
		</div>


		<div class="table-container">
			<table class="user-table">
				<thead class="table-head">
					<tr>
						<th class="table-header">Id</th>
						<th class="table-header">Full name</th>
						<th class="table-header">Email</th>
						<th class="table-header">Username</th>
						<th class="table-header">Date Joined</th>
						<th class="table-header">Role</th>
						<th class="table-header">Status</th>
						<th class="table-header">Manage</th>
					</tr>
				</thead>
				{% for user in usersSuspended %}

				<tbody class="table-body">
					<tr class="table-row">
						<td class="table-data">{{user.id}}</td>
						<td class="table-data">{{user.firstname}}</td>
						<td class="table-data">{{user.email}}</td>
						<td class="table-data">{{user.usersActive}}</td>
						<td class="table-data">{{user.createdat}}</td>
						<td class="table-data">{{user.id}}</td>
						<td class="table-data">{{user.is_suspended}}</td>
						<td class="manage-col">
							<span style="background-color: green;">
								<a href="/mange/active?UserId={{ user.id }}" class="btn-table">
									<i class="fa-solid fa-lock-open"></i>
								</a>
							</span>
							<span style="background-color: red;">
								<a href="/mange/delete?UserId={{ user.id }}" class="btn-table">
									<i class="fa-solid fa-trash"></i>
								</a>
							</span>
						</td>
					</tr>
				</tbody>
              {% endfor %}
			</table>
		</div>

	</section>
{% endblock %}
