{% block content %}

<body class="flex flex-col md:flex-row">
    <!-- Sidebar -->
    {% include 'front/organizer/layout/sidebar.twig' %}
    <!-- Main Content -->
    <div class="flex-1 p-6 ml-64">
        <!-- Header -->
        {% include 'front/organizer/layout/header.twig' %}
        <!-- Add Category Form -->
        <div class="bg-white shadow-md rounded-md p-6 mb-6">
            <h2 class="text-xl font-semibold mb-4">Ajouter une nouvelle catégorie</h2>
            <form action="./Category.php" method="POST" class="flex items-center gap-4">
                <input type="text" name="category_name" placeholder="Entrez le nom de la catégorie" required 
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                <button type="submit" name="add_category" 
                        class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">
                    Ajouter
                </button>
            </form>
        </div>
    
        <!-- Categories Table -->
        <div class="bg-white shadow-md rounded-md p-6">
            <h2 class="text-xl font-semibold mb-4">Liste des catégories</h2>
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">2</td>
                        <td class="px-6 py-4 whitespace-nowrap">Catégorie Exemple</td>
                        <td class="px-6 py-4 whitespace-nowrap text-center flex justify-center gap-2">
                            <!-- Edit Button -->
                            <form action="../../../Controllers/update_category.php" method="POST" class="inline-block">
                                <input type="hidden" name="category_id" value="#">
                                <input type="text" name="category_name" value="#"
                                       class="px-2 py-1 border border-gray-300 rounded-md">
                                <button type="submit" name="edit_category" 
                                        class="px-4 py-2 rounded-md hover:bg-yellow-600">
                                    <i class="fas fa-edit text-yellow-500"></i>
                                </button>
                            </form>

                            <!-- Delete Form -->
                            <form action="./Category.php" method="POST" class="inline-block">
                                <input type="hidden" name="category_id" value="#">
                                <button type="submit" name="delete_category" 
                                        class="px-4 py-2 rounded-md hover:bg-red-600">
                                    <i class="fas fa-trash text-red-500"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

